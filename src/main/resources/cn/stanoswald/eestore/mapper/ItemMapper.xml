<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.stanoswald.eestore.mapper.ItemMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.stanoswald.eestore.entity.Item">
        <id column="item_id" property="itemId" />
        <result column="product_id" property="productId" />
        <result column="item_price" property="itemPrice" />
        <result column="item_discount" property="itemDiscount" />
        <result column="item_option" property="itemOption" />
        <result column="item_stock" property="itemStock" />
        <result column="for_sale" property="forSale" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        item_id, product_id, item_price, item_discount, item_option, item_stock, for_sale
    </sql>

</mapper>
