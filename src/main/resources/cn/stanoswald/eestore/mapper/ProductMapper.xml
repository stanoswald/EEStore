<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.stanoswald.eestore.mapper.ProductMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.stanoswald.eestore.entity.Product">
        <id column="product_id" property="productId" />
        <result column="cat_id" property="catId" />
        <result column="product_name" property="productName" />
        <result column="product_detail" property="productDetail" />
        <result column="product_img" property="productImg" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        product_id, cat_id, product_name, product_detail, product_img
    </sql>

</mapper>
